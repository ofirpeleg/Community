    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@7.12.15/dist/sweetalert2.all.min.js"></script>
    <link rel="stylesheet" href="/request/myRequests.style.css">
    <title>Edit</title>
</head>
<body>
<nav class="navbar navbar-expand navBen">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">
            <img src="/images/logo.png" alt="Logo" style="width:80px;">
            <img src="/images/community.png" alt="Logo" style="width:160px;">
        </a>
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item dropdown" style="position:absolute; right:40px; top:20px;">
                <a class="nav-link dropdown-toggle fw-bold"  id="fullText" href="#" id="navbarScrollingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Hi, <%=user.full_name%>
                </a>
                <a class="nav-link dropdown-toggle fw-bold"  id="noText" href="#" id="navbarScrollingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown">
                    <li><a class="dropdown-item" href="/dashboard/edit-profile">Edit profile</a></li>
                    <li><a class="dropdown-item" href="/dashboard/my-requests">My requests</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><button type="click" class="dropdown-item" id="logout">Log out</button></li>
                </ul>
            </li>
        </ul>
    </div>
</nav>
<div class="main">
    <div class="container">
        <nav aria-label="breadcrumb" class="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">My Requests</li>
            </ol>
        </nav>
        <table class="styled-table">
            <thead>
            <tr>
                <th>Status</th>
                <th>Date</th>
                <th>Type</th>
                <th>Description</th>
                <th>Options</th>
            </tr>
            </thead>
            <tbody>
            <% for(let i=0;i<requests.length;i++) { %>
            <tr>
                <td><%=requests[i].status%></td>
                <td><%=(requests[i].date).toLocaleDateString() +' '+ (requests[i].date).toLocaleTimeString()%></td>
                <td><%=requests[i].request_type%></td>
                <td><%=requests[i].description%></td>
                <td><button type="click" id="btn" name="editBtn" class="btn btn-light" data-toggle="button" aria-pressed="false"
                              autocomplete="off" value="<%=requests[i]._id%>">
                        edit
                    </button>
                    <button type="click" id="btn" name="deleteBtn" class="btn btn-danger" data-toggle="button" aria-pressed="false"
                            autocomplete="off" value="<%=requests[i]._id%>">
                        delete
                    </button>
                </td>
            </tr>
            <% } %>
            </tbody>
        </table>
<nav class="py-3 navbar-expand-lg navbar-light bg-light fixed-bottom">
